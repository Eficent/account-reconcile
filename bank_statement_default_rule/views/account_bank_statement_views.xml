<?xml version="1.0" ?>
<odoo>

    <record id="view_bank_statement_form" model="ir.ui.view">
        <field name="name">account.bank.statement.form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_apply_default_rules"
                        string="Apply defaults" type="object"
                        class="oe_highlight"
                        attrs="{'invisible':['|',('line_ids','=',[]),('state', '!=', 'open')]}"/>
            </header>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='amount_currency']" position="after">
                <button name="action_create_default_rule"
                        string="Create default rule"
                        type="object"
                        icon="fa-plus-circle"/>
            </xpath>
        </field>
    </record>

</odoo>
