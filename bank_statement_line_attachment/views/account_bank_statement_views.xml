<?xml version="1.0" ?>
<odoo>

    <record id="view_bank_statement_form" model="ir.ui.view">
        <field name="name">account.bank.statement.form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='amount_currency']" position="after">
                <field name="requires_attachment"/>
                <field name="attachment_number"
                       attrs="{'invisible': [('requires_attachment', '=', False)]}"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents"
                        type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('requires_attachment', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
